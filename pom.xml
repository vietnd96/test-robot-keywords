<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.ndviet</groupId>
    <artifactId>test-robot-keywords</artifactId>
    <version>${revision}</version>
    <name>Test Robot Keywords</name>
    <packaging>pom</packaging>
    <modules>
        <module>keywords</module>
    </modules>

    <properties>
        <revision>1.0.0-SNAPSHOT</revision>
        <maven-shade-plugin.version>3.4.1</maven-shade-plugin.version>
        <maven-dependency-plugin.version>3.3.0</maven-dependency-plugin.version>
        <flatten-maven-plugin.version>1.0.1</flatten-maven-plugin.version>
        <selenium-java.version>4.6.0</selenium-java.version>
        <snakeyaml.version>1.33</snakeyaml.version>
        <sshd-core.version>2.9.1</sshd-core.version>
        <commons-io.version>2.11.0</commons-io.version>
        <javalib-core.version>2.0.3</javalib-core.version>
        <json-path.version>2.7.0</json-path.version>
        <log4j.version>1.2.17</log4j.version>
        <jackson-databind.version>2.14.1</jackson-databind.version>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>flatten-maven-plugin</artifactId>
                <version>${flatten-maven-plugin.version}</version>
                <configuration>
                    <updatePomFile>true</updatePomFile>
                </configuration>
                <executions>
                    <execution>
                        <id>flatten</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>flatten</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>flatten.clean</id>
                        <phase>clean</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>